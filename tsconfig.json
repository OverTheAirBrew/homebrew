{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "declaration": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "lib": ["es2017"],
    "outDir": "dist"
  },
  "include": ["src/**/*.ts", "test/**/*.ts", "dev/**/*.ts"],
  "exclude": ["node_modules"]
}
