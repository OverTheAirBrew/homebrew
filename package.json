{
  "name": "@overtheairbrew/homebrew",
  "version": "0.4.2",
  "description": "ota homebrew app",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "test": "lerna run test",
    "build": "lerna run build",
    "clean": "lerna clean --yes",
    "bootstrap": "lerna bootstrap",
    "publish": "lerna publish from-package",
    "link": "lerna link",
    "rn-prerelease": "gren release --override --prerelease --token $GITHUB_TOKEN",
    "rn": "gren release --override --token $GITHUB_TOKEN",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/overtheairbrew/homebrew.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/overtheairbrew/homebrew/issues"
  },
  "homepage": "https://github.com/overtheairbrew/homebrew#readme",
  "dependencies": {
    "github-release-notes": "^0.17.3",
    "homebrew": "file:packages/ota-homebrew",
    "lerna": "^3.22.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@types/node": "^14.17.4",
    "del-cli": "^4.0.0",
    "husky": "^6.0.0",
    "lint-staged": "^11.0.0",
    "mocha": "^9.0.1",
    "nyc": "^15.1.0",
    "prettier": "^2.3.1",
    "typescript": "^4.3.4"
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "app"
    ]
  },
  "lint-staged": {
    "*.{ts,md}": [
      "prettier --write"
    ]
  }
}
