{
  "name": "overtheair",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build",
    "test": "lerna run test:cov",
    "e2e": "lerna run test:e2e:cov",
    "migrate": "lerna run migrate",
    "release": "lerna exec --concurrency 1 --scope @overtheairbrew/* -- semantic-release -e semantic-release-monorepo",
    "postinstall": "lerna bootstrap",
    "prepare": "husky install",
    "push-locales": "crowdin upload sources"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.2",
    "@commitlint/config-conventional": "^17.0.2",
    "@crowdin/cli": "^3.7.8",
    "@overtheairbrew/semantic-release-dockerbuildx": "^1.1.0",
    "@semantic-release/commit-analyzer": "^9.0.2",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^8.0.2",
    "@semantic-release/npm": "^9.0.0",
    "@semantic-release/release-notes-generator": "^10.0.3",
    "@types/jest": "^28.1.1",
    "@types/node": "^17.0.43",
    "codecov": "^3.8.2",
    "husky": "^8.0.1",
    "lerna": "^5.1.2",
    "lint-staged": "^13.0.1",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "semantic-release": "^19.0.3",
    "semantic-release-monorepo": "^7.0.5",
    "tsconfig-paths": "^4.0.0",
    "typescript": "^4.7.3"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
